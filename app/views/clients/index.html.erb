<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>Clientes</h1>

  <div id="clients">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col">Movie</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
        <tr>
          <%= render client %>
          <td><%= link_to "Show this client", client %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
