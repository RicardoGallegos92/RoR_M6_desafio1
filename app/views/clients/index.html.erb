<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>Clientes</h1>

  <div id="clients">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombre</th>
          <th scope="col">Edad</th>
          <th scope="col">Pelicula Rentada</th>
          <th scope="col" colspan="3">Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
        <tr>
          <%= render client %>
          <td><%= link_to "Editar cliente", edit_client_path(client) %></td>
          <td><%= link_to "Mostrar cliente", client %></td>
          <td><%= button_to "Borrar cliente", @client, method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
